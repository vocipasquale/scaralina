<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#B0B0B0"/> <!-- Colore dell'ombra quando premuto -->
            <corners android:radius="0dp"/> <!-- Raggio degli angoli -->
            <padding
                    android:left="4dp"
                    android:top="4dp"
                    android:right="4dp"
                    android:bottom="4dp"/> <!-- Padding per l'ombreggiatura -->
        </shape>
    </item>
    <item android:top="2dp" android:left="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/darker_gray"/> <!-- Colore del pulsante quando premuto -->
            <corners android:radius="0dp"/> <!-- Raggio degli angoli -->
        </shape>
    </item>
</layer-list>