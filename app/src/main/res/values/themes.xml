<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.ScarAlina" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Stile uniforme per MaterialButton compatibile API 21 -->
    <style name="Widget.ScarAlina.Button" parent="Widget.MaterialComponents.Button">
        <!-- Background tint -->
        <item name="backgroundTint">@color/purple_500</item>
        <!-- Text color -->
        <item name="android:textColor">@color/white</item>
        <!-- Padding compatibile API 21 -->
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <!-- Corner radius tramite MaterialButton (app:cornerRadius funziona su MaterialButton) -->
        <item name="cornerRadius">12dp</item>
        <!-- Ripple -->
        <item name="rippleColor">@color/teal_200</item>
    </style>

    <!-- Stile uniforme per ImageButton -->
    <style name="Widget.ScarAlina.ImageButton" parent="Widget.AppCompat.ImageButton">
        <!-- Ripple already handled by selectableItemBackgroundBorderless -->
        <item name="background">?attr/selectableItemBackgroundBorderless</item>
        <!-- Tint compatibile -->
        <item name="tint">@color/purple_500</item>
    </style>

</resources>
